{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["unused-imports"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
